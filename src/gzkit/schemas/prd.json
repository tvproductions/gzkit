{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gzkit.prd.v1",
  "title": "gzkit PRD Schema",
  "description": "Schema for Product Requirements Documents - frontmatter and required headers.",
  "type": "object",
  "required": ["frontmatter", "headers"],
  "properties": {
    "frontmatter": {
      "type": "object",
      "description": "Required YAML frontmatter fields",
      "required": ["id", "status", "semver", "date"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^PRD-[A-Z0-9]+-[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "PRD identifier (e.g., PRD-GZKIT-1.0.0)"
        },
        "status": {
          "type": "string",
          "enum": ["Draft", "Review", "Approved", "Superseded"],
          "description": "Document status"
        },
        "semver": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version"
        },
        "date": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
          "description": "ISO 8601 date"
        }
      },
      "additionalProperties": true
    },
    "headers": {
      "type": "array",
      "description": "Required Markdown headers (## level)",
      "items": {
        "type": "string"
      },
      "contains": {"const": "Problem Statement"},
      "minContains": 1
    }
  },
  "required_headers": [
    "Problem Statement",
    "North Star",
    "Invariants",
    "Gate Mapping",
    "Attestation Block"
  ]
}
