{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gzkit.obpi.v1",
  "title": "gzkit OBPI Schema",
  "description": "Schema for One-Box-Per-Item work units - frontmatter and required headers.",
  "type": "object",
  "required": ["frontmatter", "headers"],
  "properties": {
    "frontmatter": {
      "type": "object",
      "description": "Required YAML frontmatter fields",
      "required": ["id", "parent", "item", "lane", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^OBPI-[a-z0-9-]+$",
          "description": "OBPI identifier (e.g., OBPI-feature-name)"
        },
        "parent": {
          "type": "string",
          "description": "Parent ADR identifier"
        },
        "item": {
          "type": ["string", "integer"],
          "description": "Checklist item number from parent ADR"
        },
        "lane": {
          "type": "string",
          "enum": ["lite", "heavy"],
          "description": "Governance lane"
        },
        "status": {
          "type": "string",
          "enum": ["Draft", "Active", "Completed", "Abandoned"],
          "description": "Document status"
        }
      },
      "additionalProperties": true
    },
    "headers": {
      "type": "array",
      "description": "Required Markdown headers (## level)",
      "items": {
        "type": "string"
      }
    }
  },
  "required_headers": [
    "Objective",
    "Parent ADR",
    "Lane",
    "Allowed Paths",
    "Denied Paths",
    "Requirements",
    "Acceptance Criteria",
    "Gate Evidence"
  ]
}
