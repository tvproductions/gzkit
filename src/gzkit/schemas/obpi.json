{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gzkit.obpi.v1",
  "title": "gzkit OBPI Schema",
  "description": "Schema for OBPI (One Brief Per Item) documents - the atomic unit of work in gzkit.",
  "type": "object",
  "required": ["frontmatter", "headers"],
  "properties": {
    "frontmatter": {
      "type": "object",
      "description": "Required YAML frontmatter fields",
      "required": ["id", "parent", "item", "lane", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^OBPI-[0-9]+\\.[0-9]+\\.[0-9]+-[0-9]{2}(-[a-z0-9-]+)?$",
          "description": "OBPI identifier (e.g., OBPI-0.1.0-01-feature-name)"
        },
        "parent": {
          "type": "string",
          "description": "Parent ADR identifier"
        },
        "item": {
          "type": ["string", "integer"],
          "description": "Checklist item number from parent ADR"
        },
        "lane": {
          "type": "string",
          "enum": ["lite", "heavy", "Lite", "Heavy"],
          "description": "Governance lane"
        },
        "status": {
          "type": "string",
          "enum": ["Draft", "Active", "Completed", "Abandoned"],
          "description": "OBPI status"
        }
      },
      "additionalProperties": true
    },
    "headers": {
      "type": "array",
      "description": "Required Markdown headers (## level)",
      "items": {
        "type": "string"
      }
    }
  },
  "required_headers": [
    "ADR Item",
    "Objective",
    "Lane",
    "Allowed Paths",
    "Denied Paths",
    "Requirements (FAIL-CLOSED)",
    "Quality Gates",
    "Acceptance Criteria"
  ],
  "optional_headers": [
    "Discovery Checklist",
    "Verification",
    "Completion Checklist",
    "Evidence"
  ]
}
